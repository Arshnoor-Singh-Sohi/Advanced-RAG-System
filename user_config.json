{
    "corpus_path": "data\\corpus.pkl",
    "index_path": "data/faiss_index",
    "chunking_strategy": "recursive",
    "chunk_size": 1000,
    "chunk_overlap": 200,
    "embedding_model": "all-MiniLM-L6-v2",
    "retrieval_method": "hybrid",
    "retrieval_alpha": 0.7,
    "top_k": 7,
    "query_expansion": false,
    "expansion_method": "simple",
    "use_hyde": true,
    "hyde_method": "basic",
    "hyde_num_docs": 3,
    "use_reranking": true,
    "reranking_method": "multi_stage",
    "reranking_model": "cross-encoder/ms-marco-MiniLM-L-6-v2",
    "reranking_stages": [
        "semantic",
        "cross_encoder",
        "diversity"
    ],
    "diversity_alpha": 0.7,
    "prompt_template": "Answer the question based ONLY on the following context:\n\nContext: {context}\n\nQuestion: {query}\n\nAnswer:",
    "temperature": 0.5,
    "use_mmr": false,
    "mmr_fetch_k": 20,
    "mmr_lambda": 0.5,
    "bm25_k1": 1.5,
    "bm25_b": 0.75,
    "query_transformation": "none",
    "multiquery_num_variations": 3
}